{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "inputs": [
        "src/**/*",
        "package.json",
        "tailwind.config.cjs",
        "webpack.config.js"
      ],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "watch:dev": {
      "cache": false,
      "persistent": true
    }
  }
}
